---
import Layout from '../../layouts/Layout.astro';
import FinalCTA from '../../components/sections/FinalCTA.astro';

const benefits = [
  {
    title: 'Sachbezug',
    description: 'Bis zu 50 € monatlich steuerfrei. Der Klassiker unter den Mitarbeiter-Benefits.',
    href: '/benefits/sachbezug/',
    image: `${import.meta.env.BASE_URL}images/benefit_card_sachbezug.png`,
    tag: 'Beliebt',
  },
  {
    title: 'Essenszuschuss',
    description: 'Bis zu 7,50 € täglich steuerfrei. Für Mahlzeiten in der Kantine oder beim Lieferdienst.',
    href: '/benefits/essenszuschuss/',
    image: `${import.meta.env.BASE_URL}images/benefit_card_essenszuschuss.png`,
    tag: 'Beliebt',
  },
  {
    title: 'Mobilität',
    description: 'Bis zu 50 € monatlich steuerfrei. Für ÖPNV, Dienstrad oder Tankzuschuss.',
    href: '/benefits/mobilitaetsbudget/',
    image: `${import.meta.env.BASE_URL}images/benefit_card_mobilitaet.png`,
    tag: 'Neu',
  },
  {
    title: 'Internetzuschuss',
    description: 'Bis zu 50 € monatlich steuerfrei. Für das Homeoffice-Internet.',
    href: '/benefits/internetzuschuss/',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0" /></svg>`,
  },
  {
    title: 'KiTa-Zuschuss',
    description: 'Steuerfrei & sozialabgabenfrei. Unterstützung für Kinderbetreuungskosten.',
    href: '/benefits/kita-zuschuss/',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>`,
  },
  {
    title: 'Firmenfitness',
    description: 'Bis zu 600 € pro Jahr steuerfrei. Für Fitnessstudio, Kurse und mehr.',
    href: '/benefits/firmenfitness/',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" /></svg>`,
  },
  {
    title: 'Erholungsbeihilfe',
    description: 'Bis zu 156 € pro Jahr steuerfrei. Für Urlaub und Erholung.',
    href: '/benefits/erholungsbeihilfe/',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>`,
  },
  {
    title: 'Betriebliche Altersvorsorge',
    description: 'Steueroptimiert für die Zukunft vorsorgen.',
    href: '/benefits/bav/',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
];
---

<Layout
  title="Alle Mitarbeiter-Benefits"
  description="Entdecke alle steuerfreien Mitarbeiter-Benefits von become.1. Sachbezug, Essenszuschuss, Mobilitätsbudget und mehr. Jetzt kostenlose Demo vereinbaren."
>
  <!-- Hero -->
  <section class="bg-[#FAF9F7] py-20">
    <div class="container mx-auto px-6 max-w-4xl text-center">
      <p class="eyebrow">BENEFITS-KATALOG</p>
      <h1 class="text-4xl md:text-[56px] font-extrabold text-[#1B1D1E] mt-2 mb-4 leading-tight">
        Alle Benefits in einer Plattform
      </h1>
      <p class="text-lg text-[#1B1D1E]/60 max-w-2xl mx-auto">
        Wähle aus über 15 steuerfreien Benefits die passenden für dein Team aus. Alle vollautomatisch verwaltet und rechtssicher.
      </p>
    </div>
  </section>

  <!-- Benefits Grid -->
  <section class="bg-[#F0EDE8] py-16">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {benefits.map((benefit) => (
          <a
            href={benefit.href}
            class="bg-white rounded-2xl p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-200 group relative"
          >
            {benefit.tag && (
              <span class={`absolute top-4 right-4 text-xs font-bold px-2.5 py-1 rounded-full ${benefit.tag === 'Neu' ? 'bg-[#1A6B4A] text-white' : 'bg-[#F5A623] text-[#1B1D1E]'}`}>
                {benefit.tag}
              </span>
            )}
            {benefit.image ? (
              <img src={benefit.image} alt={benefit.title} class="w-full aspect-square object-cover rounded-xl mb-4" />
            ) : (
              <div class="w-full aspect-square bg-[#F0EDE8] rounded-xl mb-4 flex items-center justify-center text-[#1A6B4A] group-hover:bg-[#1A6B4A] group-hover:text-white transition-colors">
                <Fragment set:html={benefit.icon} />
              </div>
            )}
            <h2 class="text-lg font-bold text-[#1B1D1E] group-hover:text-[#1A6B4A] transition-colors mb-1">{benefit.title}</h2>
            <p class="text-sm text-[#1B1D1E]/60 leading-relaxed">{benefit.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <FinalCTA
    heading="Bereit, die passenden Benefits zu wählen?"
    subheading="In einer kostenlosen Demo zeigen wir dir, welche Benefits am besten zu deinem Team passen."
  />
</Layout>
