---
import Layout from '../layouts/Layout.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import FinalCTA from '../components/sections/FinalCTA.astro';

const reasons = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
    title: 'In 15 Minuten startklar',
    description: 'Keine langen Implementierungsprojekte. Keine IT-Abteilung nötig. Richte become.1 in weniger als 15 Minuten ein und lade dein Team sofort ein.',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    title: '100% rechtssicher & DSGVO-konform',
    description: 'Unsere Rechtsexperten überwachen kontinuierlich alle steuerrechtlichen Änderungen. Du musst dich um nichts kümmern – wir halten dich immer compliant.',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>`,
    title: 'Direkte Lohnbuchhaltungs-Integration',
    description: 'Nahtlose Anbindung an über 40 Lohnbuchhaltungssysteme, darunter DATEV, Lexware und SAP. Die Abrechnung läuft vollautomatisch.',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>`,
    title: 'Mitarbeiter-App, die begeistert',
    description: 'Deine Mitarbeiter verwalten ihre Benefits selbst – einfach, modern und transparent. Die become.1 App ist so intuitiv wie ein Online-Shop.',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" /></svg>`,
    title: 'Persönlicher Support',
    description: 'Du bist kein Ticket. Unser Support-Team ist per Chat, E-Mail und Telefon erreichbar und antwortet im Schnitt in unter 2 Stunden.',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
    title: 'Messbare Ergebnisse',
    description: 'Unser Dashboard zeigt dir auf einen Blick, wie viel dein Unternehmen spart, wie hoch die Mitarbeiter-Akzeptanz ist und wo noch Potenzial liegt.',
  },
];
---

<Layout
  title="Warum become.1?"
  description="Erfahre, warum über 1.000 Unternehmen in Deutschland auf become.1 für ihre Mitarbeiter-Benefits setzen. Einfach, rechtssicher und messbar."
>
  <!-- Hero -->
  <section class="bg-[#FAF9F7] py-20">
    <div class="container mx-auto px-6 max-w-4xl text-center">
      <p class="eyebrow">WARUM BECOME.1?</p>
      <h1 class="text-4xl md:text-[56px] font-extrabold text-[#1B1D1E] mt-2 mb-4 leading-tight">
        Der Benefits-Spezialist<br class="hidden md:block" />
        für den Mittelstand
      </h1>
      <p class="text-lg text-[#1B1D1E]/60 max-w-2xl mx-auto">
        Wir glauben, dass echte Wertschätzung am Gehaltszettel ankommt. Deshalb machen wir steueroptimierte Benefits für jedes Unternehmen zugänglich – einfach, automatisch und rechtssicher.
      </p>
    </div>
  </section>

  <!-- Stats -->
  <section class="bg-[#F0EDE8] py-12">
    <div class="container mx-auto px-6 max-w-5xl">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        {[
          { value: '1.000+', label: 'Unternehmen' },
          { value: '50.000+', label: 'Mitarbeiter' },
          { value: '15+', label: 'Benefits' },
          { value: '40+', label: 'Lohnbuchhaltungs-Integrationen' },
        ].map((stat) => (
          <div>
            <p class="text-4xl font-extrabold text-[#1A6B4A]">{stat.value}</p>
            <p class="text-sm text-[#1B1D1E]/60 mt-1">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Reasons -->
  <section class="bg-[#FAF9F7] py-20">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-[40px] font-bold text-[#1B1D1E] leading-tight">
          6 Gründe, die für become.1 sprechen
        </h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {reasons.map((reason) => (
          <div class="bg-white rounded-2xl p-8 border border-[#F0EDE8] hover:shadow-md transition-shadow">
            <div class="w-14 h-14 bg-[#F0EDE8] rounded-xl flex items-center justify-center text-[#1A6B4A] mb-4">
              <Fragment set:html={reason.icon} />
            </div>
            <h3 class="text-lg font-bold text-[#1B1D1E] mb-2">{reason.title}</h3>
            <p class="text-sm text-[#1B1D1E]/60 leading-relaxed">{reason.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Testimonials />

  <FinalCTA
    heading="Überzeuge dich selbst"
    subheading="Vereinbare jetzt eine kostenlose Demo und sieh, wie einfach Benefits sein können."
  />
</Layout>
