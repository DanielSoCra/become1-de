<script>
  // Set wrapper height to match scaled canvas height
  function scaleMobile() {
    document.querySelectorAll('.mobile-wrapper').forEach(wrapper => {
      const canvas = wrapper.querySelector('.mobile-canvas');
      if (!canvas) return;
      const scale = 200 / 320;
      canvas.style.transform = `scale(${scale})`;
      wrapper.style.height = (canvas.offsetHeight * scale) + 'px';
    });
  }
  scaleMobile();
  window.addEventListener('resize', scaleMobile);
</script>
