<style>
  .phone-shell {
    font-family: 'Poppins', -apple-system, sans-serif;
    width: 210px;
    background: #111213;
    border-radius: 38px;
    padding: 10px;
    box-shadow:
      0 0 0 1px rgba(255,255,255,0.06),
      0 2px 4px rgba(0,0,0,0.4),
      0 12px 32px rgba(0,0,0,0.35),
      0 32px 64px rgba(0,0,0,0.2),
      inset 0 1px 0 rgba(255,255,255,0.08);
    display: flex;
    flex-direction: column;
  }

  /* Status bar */
  .phone-status {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 5px 14px 4px;
    color: white;
  }
  .phone-time { font-size: 11px; font-weight: 700; }
  .phone-notch {
    width: 64px; height: 16px;
    background: #111213;
    border-radius: 0 0 12px 12px;
    margin-top: -10px;
  }
  .phone-icons { display: flex; align-items: center; gap: 5px; }
  .battery {
    display: flex; align-items: center; gap: 1px;
  }
  .battery-fill {
    width: 18px; height: 9px;
    border: 1.5px solid rgba(255,255,255,0.6);
    border-radius: 2.5px;
    padding: 1.5px;
    background: transparent;
    position: relative;
    overflow: hidden;
  }
  .battery-fill::after {
    content: '';
    display: block;
    width: 70%;
    height: 100%;
    background: #34C759;
    border-radius: 1px;
  }
  .battery-tip {
    width: 2px; height: 5px;
    background: rgba(255,255,255,0.5);
    border-radius: 1px;
  }

  /* Screen */
  .app-screen {
    background: #FAF9F7;
    border-radius: 28px;
    overflow: hidden;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Green header */
  .app-header {
    background: #1A6B4A;
    padding: 14px 14px 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .app-header-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .app-greeting {
    font-size: 10px;
    color: rgba(255,255,255,0.65);
    margin: 0;
  }
  .app-name {
    font-size: 14px;
    font-weight: 700;
    color: white;
    margin: 2px 0 0;
  }
  .app-avatar {
    width: 32px; height: 32px;
    border-radius: 50%;
    background: rgba(255,255,255,0.2);
    color: white;
    font-size: 10px;
    font-weight: 700;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }

  /* Budget card */
  .budget-card {
    background: rgba(255,255,255,0.12);
    border-radius: 14px;
    padding: 12px 14px;
    backdrop-filter: blur(8px);
  }
  .budget-label {
    font-size: 9px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(255,255,255,0.6);
    margin: 0 0 4px;
  }
  .budget-amount {
    font-size: 28px;
    font-weight: 800;
    color: white;
    margin: 0 0 9px;
    line-height: 1;
  }
  .budget-track {
    height: 4px;
    background: rgba(255,255,255,0.2);
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 5px;
  }
  .budget-fill {
    width: 73%;
    height: 100%;
    background: #F5A623;
    border-radius: 2px;
  }
  .budget-sub {
    font-size: 9px;
    color: rgba(255,255,255,0.55);
    margin: 0;
  }

  /* Quick actions */
  .quick-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 7px;
    padding: 12px 12px 8px;
  }
  .qa-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 8px 3px;
    background: white;
    border-radius: 11px;
    border: 1px solid #F0EDE8;
  }
  .qa-btn span:first-child { font-size: 16px; }
  .qa-btn span:last-child {
    font-size: 7.5px;
    font-weight: 600;
    color: #6B7280;
    text-align: center;
    line-height: 1.2;
  }

  /* Benefits */
  .benefits-wrap {
    flex: 1;
    padding: 0 12px 10px;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  .benefits-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2px;
  }
  .benefits-title {
    font-size: 12px;
    font-weight: 700;
    color: #1B1D1E;
  }
  .benefits-all {
    font-size: 10px;
    font-weight: 600;
    color: #1A6B4A;
  }
  .benefit-row {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 10px;
    background: white;
    border-radius: 11px;
    border: 1px solid #F0EDE8;
  }
  .bi-icon {
    width: 28px; height: 28px;
    border-radius: 8px;
    display: flex; align-items: center; justify-content: center;
    font-size: 14px;
    flex-shrink: 0;
  }
  .bi-info { flex: 1; min-width: 0; }
  .bi-name {
    font-size: 10px;
    font-weight: 600;
    color: #1B1D1E;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .bi-detail {
    font-size: 9px;
    color: #9CA3AF;
    margin: 1px 0 0;
  }
  .bi-val {
    font-size: 11px;
    font-weight: 700;
    flex-shrink: 0;
  }

  /* Bottom nav */
  .phone-nav {
    display: flex;
    justify-content: space-around;
    padding: 8px 8px 4px;
    background: white;
    border-top: 1px solid #F0EDE8;
  }
  .nav-item {
    width: 36px; height: 34px;
    border-radius: 10px;
    display: flex; align-items: center; justify-content: center;
    color: rgba(27,29,30,0.25);
  }
  .nav-active {
    background: rgba(26,107,74,0.1);
    color: #1A6B4A;
  }

  /* Home indicator */
  .home-indicator {
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .home-indicator::after {
    content: '';
    display: block;
    width: 52px; height: 4px;
    background: rgba(255,255,255,0.25);
    border-radius: 2px;
  }
</style>
