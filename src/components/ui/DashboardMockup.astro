<style>
  .dashboard-wrapper {
    width: 760px;
    background: #16181A;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 32px 80px rgba(0,0,0,0.5), 0 0 0 1px rgba(255,255,255,0.06);
    font-family: 'Poppins', -apple-system, sans-serif;
  }

  /* Browser chrome */
  .browser-chrome {
    background: #1E2022;
    padding: 10px 14px;
    display: flex;
    align-items: center;
    gap: 10px;
    border-bottom: 1px solid rgba(255,255,255,0.06);
  }
  .browser-dots { display: flex; gap: 5px; }
  .browser-dots span { width: 10px; height: 10px; border-radius: 50%; display: block; }
  .browser-url {
    flex: 1;
    background: rgba(255,255,255,0.06);
    border-radius: 6px;
    padding: 3px 10px;
    font-size: 10px;
    color: rgba(255,255,255,0.35);
    text-align: center;
  }

  /* App shell */
  .app-shell {
    display: flex;
    height: 420px;
  }

  /* Sidebar */
  .sidebar {
    width: 160px;
    background: #1A1C1E;
    border-right: 1px solid rgba(255,255,255,0.06);
    display: flex;
    flex-direction: column;
    padding: 16px 0;
    flex-shrink: 0;
  }
  .sidebar-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 0 16px 16px;
    border-bottom: 1px solid rgba(255,255,255,0.06);
    margin-bottom: 12px;
  }
  .logo-mark {
    width: 26px; height: 26px;
    background: #1A6B4A;
    border-radius: 7px;
    display: flex; align-items: center; justify-content: center;
    font-size: 10px; font-weight: 800; color: white;
  }
  .logo-text { font-size: 12px; font-weight: 700; color: white; }

  .sidebar-nav { flex: 1; padding: 0 8px; display: flex; flex-direction: column; gap: 2px; }
  .nav-item {
    display: flex; align-items: center; gap: 8px;
    padding: 7px 8px;
    border-radius: 7px;
    font-size: 11px; font-weight: 500;
    color: rgba(255,255,255,0.4);
    cursor: pointer;
  }
  .nav-item.active { background: rgba(26,107,74,0.2); color: #4A9B7A; }

  .sidebar-user {
    display: flex; align-items: center; gap: 8px;
    padding: 12px 16px 0;
    border-top: 1px solid rgba(255,255,255,0.06);
    margin-top: 8px;
  }
  .user-avatar {
    width: 28px; height: 28px;
    background: #1A6B4A;
    border-radius: 50%;
    font-size: 10px; font-weight: 700; color: white;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }
  .user-name { font-size: 11px; font-weight: 600; color: white; }
  .user-role { font-size: 9px; color: rgba(255,255,255,0.35); }

  /* Main content */
  .main-content {
    flex: 1;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    overflow: hidden;
  }

  /* Topbar */
  .topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .page-title { font-size: 15px; font-weight: 700; color: white; }
  .page-subtitle { font-size: 10px; color: rgba(255,255,255,0.4); margin-top: 1px; }
  .add-btn {
    display: flex; align-items: center; gap: 5px;
    background: #1A6B4A;
    color: white;
    border: none;
    border-radius: 7px;
    padding: 6px 12px;
    font-size: 10px; font-weight: 600;
    cursor: pointer;
  }

  /* KPI grid 2x2 */
  .kpi-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
  }
  .kpi-card {
    background: #1E2022;
    border: 1px solid rgba(255,255,255,0.07);
    border-radius: 10px;
    padding: 12px;
  }
  .kpi-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6px;
  }
  .kpi-label { font-size: 10px; color: rgba(255,255,255,0.4); font-weight: 500; }
  .kpi-icon {
    width: 22px; height: 22px;
    border-radius: 6px;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }
  .kpi-value { font-size: 20px; font-weight: 800; color: white; line-height: 1; }
  .kpi-sub { font-size: 10px; font-weight: 500; margin-top: 3px; }

  /* Bottom row */
  .bottom-row {
    display: flex;
    gap: 10px;
    flex: 1;
    overflow: hidden;
    min-height: 0;
  }
  .usage-card, .activity-card {
    background: #1E2022;
    border: 1px solid rgba(255,255,255,0.07);
    border-radius: 10px;
    padding: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 7px;
  }
  .usage-card { flex: 1.2; }
  .activity-card { flex: 1; }

  .card-title {
    font-size: 11px; font-weight: 700; color: white;
    display: flex; align-items: center; gap: 6px;
    margin-bottom: 2px;
  }
  .card-subtitle { font-size: 10px; color: rgba(255,255,255,0.3); font-weight: 400; }
  .live-dot {
    width: 7px; height: 7px;
    border-radius: 50%;
    background: #4A9B7A;
    display: inline-block;
    animation: pulse 2s infinite;
  }
  @keyframes pulse { 0%,100%{opacity:1} 50%{opacity:0.4} }

  /* Usage bars */
  .usage-row { display: flex; flex-direction: column; gap: 3px; }
  .usage-meta { display: flex; align-items: center; gap: 4px; }
  .usage-name { font-size: 10px; color: rgba(255,255,255,0.6); font-weight: 500; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
  .usage-val { font-size: 9px; color: rgba(255,255,255,0.3); white-space: nowrap; }
  .usage-pct { font-size: 9px; color: rgba(255,255,255,0.5); font-weight: 600; min-width: 26px; text-align: right; }
  .usage-bar-bg { height: 4px; background: rgba(255,255,255,0.08); border-radius: 2px; overflow: hidden; }
  .usage-bar-fill { height: 100%; border-radius: 2px; transition: width 0.5s ease; }

  /* Activity */
  .activity-row { display: flex; align-items: center; gap: 7px; }
  .activity-avatar {
    width: 24px; height: 24px;
    border-radius: 50%;
    font-size: 9px; font-weight: 700;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }
  .activity-info { flex: 1; min-width: 0; }
  .activity-name { font-size: 10px; font-weight: 600; color: white; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
  .activity-action { font-size: 9px; color: rgba(255,255,255,0.35); white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
  .activity-time { font-size: 9px; color: rgba(255,255,255,0.25); white-space: nowrap; flex-shrink: 0; }
</style>
