<style>
  .db-shell {
    font-family: 'Poppins', -apple-system, sans-serif;
    background: #FFFFFF;
    border-radius: 16px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px rgba(0,0,0,0.07),
      0 4px 6px rgba(0,0,0,0.04),
      0 20px 40px rgba(0,0,0,0.10),
      0 40px 80px rgba(0,0,0,0.06);
    width: 460px;
  }

  /* Browser bar */
  .db-bar {
    background: #F7F7F5;
    border-bottom: 1px solid #EBEBEB;
    padding: 10px 16px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .db-dots { display: flex; gap: 5px; }
  .db-dots span {
    width: 10px; height: 10px; border-radius: 50%;
    display: block; background: #E0E0E0;
  }
  .db-dots span:nth-child(1) { background: #FF5F57; }
  .db-dots span:nth-child(2) { background: #FEBC2E; }
  .db-dots span:nth-child(3) { background: #28C840; }
  .db-url {
    flex: 1;
    background: #EFEFED;
    border-radius: 6px;
    padding: 3px 10px;
    font-size: 10px;
    color: #999;
    text-align: center;
  }
  .db-avatar {
    width: 24px; height: 24px;
    border-radius: 50%;
    background: #1A6B4A;
    color: white;
    font-size: 9px;
    font-weight: 700;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }

  /* Layout */
  .db-body {
    display: flex;
    height: 300px;
  }

  /* Sidebar */
  .db-sidebar {
    width: 120px;
    background: #FAFAF8;
    border-right: 1px solid #F0EDE8;
    padding: 20px 12px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex-shrink: 0;
  }
  .db-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 0 4px;
  }
  .db-logo-mark {
    width: 24px; height: 24px;
    background: #1A6B4A;
    border-radius: 7px;
    color: white;
    font-size: 9px;
    font-weight: 800;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }
  .db-logo span {
    font-size: 11px;
    font-weight: 700;
    color: #1B1D1E;
  }
  nav {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .db-nav-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 10px;
    border-radius: 8px;
    font-size: 11px;
    font-weight: 500;
    color: #9CA3AF;
    cursor: pointer;
    text-decoration: none;
  }
  .db-active {
    background: #1A6B4A0F;
    color: #1A6B4A;
    font-weight: 600;
  }

  /* Main */
  .db-main {
    flex: 1;
    padding: 14px 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    overflow: hidden;
  }

  /* Header */
  .db-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }
  .db-greeting {
    font-size: 14px;
    font-weight: 700;
    color: #1B1D1E;
    margin: 0;
  }
  .db-date {
    font-size: 10px;
    color: #9CA3AF;
    margin: 2px 0 0;
  }
  .db-cta-btn {
    background: #1A6B4A;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 7px 14px;
    font-size: 11px;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
    font-family: 'Poppins', sans-serif;
  }

  /* KPI cards */
  .db-kpis {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 8px;
  }
  .db-kpi {
    background: #F9F8F6;
    border: 1px solid #F0EDE8;
    border-radius: 10px;
    padding: 10px 12px;
  }
  .db-kpi-brand {
    background: #1A6B4A;
    border-color: #1A6B4A;
  }
  .db-kpi-label {
    font-size: 10px;
    font-weight: 500;
    color: #9CA3AF;
    margin: 0 0 6px;
  }
  .db-kpi-val {
    font-size: 17px;
    font-weight: 800;
    color: #1B1D1E;
    margin: 0 0 3px;
    line-height: 1;
  }
  .db-kpi-delta {
    font-size: 10px;
    font-weight: 500;
    margin: 0;
    color: #9CA3AF;
  }
  .db-positive { color: #1A6B4A !important; }

  /* Benefits section */
  .db-section {
    flex: 1;
    min-height: 0;
  }
  .db-section-title {
    font-size: 11px;
    font-weight: 700;
    color: #1B1D1E;
    margin: 0 0 10px;
    display: flex;
    align-items: center;
    gap: 6px;
  }
  .db-section-sub {
    font-size: 10px;
    font-weight: 400;
    color: #9CA3AF;
  }
  .db-benefits {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .db-benefit-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .db-benefit-icon {
    font-size: 13px;
    width: 20px;
    text-align: center;
    flex-shrink: 0;
  }
  .db-benefit-name {
    font-size: 10px;
    font-weight: 500;
    color: #374151;
    width: 90px;
    flex-shrink: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .db-bar-wrap {
    flex: 1;
    height: 5px;
    background: #F0EDE8;
    border-radius: 3px;
    overflow: hidden;
  }
  .db-bar {
    height: 100%;
    background: #1A6B4A;
    border-radius: 3px;
    transition: width 0.6s ease;
  }
  .db-benefit-pct {
    font-size: 10px;
    font-weight: 600;
    color: #6B7280;
    width: 28px;
    text-align: right;
    flex-shrink: 0;
  }
</style>
