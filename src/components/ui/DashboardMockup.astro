<script>
  // Scale the 800px canvas down to fit its container
  function scaleDashboard() {
    document.querySelectorAll('.dashboard-wrapper').forEach(wrapper => {
      const canvas = wrapper.querySelector('.dashboard-canvas');
      if (!canvas) return;
      const containerWidth = wrapper.offsetWidth;
      const scale = containerWidth / 800;
      canvas.style.transform = `scale(${scale})`;
      // Set wrapper height to match scaled canvas height
      const canvasHeight = canvas.offsetHeight || 530;
      wrapper.style.height = (canvasHeight * scale) + 'px';
    });
  }
  scaleDashboard();
  window.addEventListener('resize', scaleDashboard);
</script>
