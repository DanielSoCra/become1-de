---
const signals = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    label: '100% DSGVO-konform',
    sub: 'Datenspeicherung in Deutschland',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>`,
    label: 'ISO 27001 zertifiziert',
    sub: 'Höchste Datensicherheit',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>`,
    label: 'Rechtssicher & compliant',
    sub: 'Kontinuierliche Rechtsüberwachung',
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
    label: 'Setup in 15 Minuten',
    sub: 'Keine IT-Abteilung nötig',
  },
];
---

<section class="bg-[#F0EDE8] py-14">
  <div class="container mx-auto px-6 max-w-6xl">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      {signals.map((s) => (
        <div class="flex flex-col items-center text-center gap-3">
          <div class="w-14 h-14 bg-white rounded-xl flex items-center justify-center text-[#1A6B4A] shadow-sm">
            <Fragment set:html={s.icon} />
          </div>
          <div>
            <p class="font-bold text-[#1B1D1E] text-sm">{s.label}</p>
            <p class="text-xs text-[#1B1D1E]/50 mt-0.5">{s.sub}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
