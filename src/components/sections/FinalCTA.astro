---
export interface Props {
  heading?: string;
  subheading?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  heading = 'Bereit, deine Mitarbeiter-Benefits zu revolutionieren?',
  subheading = 'Starte jetzt mit der führenden Benefits-Plattform für den Mittelstand und überzeuge dich selbst von der einfachsten Art, deinem Team Gutes zu tun.',
  ctaText = 'Kostenlose Demo vereinbaren',
  ctaHref = '/demo/',
} = Astro.props;
---

<section class="bg-[#1A6B4A] py-20">
  <div class="container mx-auto px-6 max-w-3xl text-center">
    <h2 class="text-3xl md:text-[40px] font-bold text-white leading-tight mb-4">
      {heading}
    </h2>
    <p class="text-white/70 text-lg mb-8 leading-relaxed">
      {subheading}
    </p>
    <a href={ctaHref} class="btn-primary text-base py-4 px-10">
      {ctaText}
    </a>
    <p class="text-white/50 text-sm mt-4">Keine Kreditkarte erforderlich. Kostenlos & unverbindlich.</p>
  </div>
</section>
