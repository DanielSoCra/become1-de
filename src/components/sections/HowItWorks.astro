      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
      {steps.map((step, index) => (
        <div class="relative bg-white rounded-2xl p-8 border border-[#F0EDE8] hover:shadow-md transition-shadow duration-300">
          {/* Step number badge */}
          <div class="flex items-center justify-between mb-6">
            <span class="text-4xl">{step.emoji}</span>
            <span class="text-xs font-bold text-[#1B1D1E]/30 bg-[#F0EDE8] px-3 py-1 rounded-full">{step.number}</span>
          </div>

          <h3 class="text-xl font-bold text-[#1B1D1E] mb-3">{step.title}</h3>
          <p class="text-[#1B1D1E]/60 leading-relaxed text-sm mb-6">{step.description}</p>

          {/* Time indicator */}
          <div class="flex items-center gap-2 text-xs font-semibold text-[#1A6B4A] bg-[#1A6B4A]/8 rounded-lg px-3 py-2 w-fit">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {step.time}
          </div>

          {/* Connector arrow for desktop */}
          {index < steps.length - 1 && (
            <div class="hidden md:flex absolute top-1/2 -right-4 -translate-y-1/2 z-10 w-8 h-8 bg-[#F5A623] rounded-full items-center justify-center shadow-md">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#1B1D1E]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          )}
        </div>
      ))}
