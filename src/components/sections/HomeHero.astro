---
import DashboardMockup from '../ui/DashboardMockup.astro';
import MobileAppMockup from '../ui/MobileAppMockup.astro';

const base = import.meta.env.BASE_URL;
---

<section class="bg-[#FAF9F7] pt-16 pb-8 md:pt-24 md:pb-12 overflow-hidden relative">
  <!-- Subtle background grid -->
  <div class="absolute inset-0 pointer-events-none opacity-[0.03]" style="background-image: linear-gradient(#1A6B4A 1px, transparent 1px), linear-gradient(90deg, #1A6B4A 1px, transparent 1px); background-size: 40px 40px;"></div>
  <!-- Radial glow -->
  <div class="absolute top-0 right-0 w-[600px] h-[600px] rounded-full pointer-events-none" style="background:radial-gradient(circle, rgba(26,107,74,0.08) 0%, transparent 70%); transform: translate(20%, -20%);"></div>

  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">

      <!-- ── Left: Copy ── -->
      <div class="space-y-6 max-w-xl">
        <!-- Eyebrow badge -->
        <div class="flex items-center gap-3">
          <span class="inline-flex items-center gap-1.5 bg-[#1A6B4A]/10 text-[#1A6B4A] text-xs font-bold px-3 py-1.5 rounded-full border border-[#1A6B4A]/20">
            <span class="w-2 h-2 rounded-full bg-[#1A6B4A] animate-pulse"></span>
            OMR Top 100 Tool 2024
          </span>
        </div>

        <!-- Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-[56px] font-extrabold leading-[1.05] tracking-tight text-[#1B1D1E]">
          Mehr Netto für dein Team.<br class="hidden md:block" />
          <span class="text-[#1A6B4A]">Weniger Aufwand</span> für HR.
        </h1>
        <p class="text-lg text-[#1B1D1E]/70 leading-relaxed">
          become.1 ist die All-in-One Plattform für steuerfreie Mitarbeiter-Benefits. Vollautomatisch, rechtssicher und in 20 Minuten einsatzbereit.
        </p>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center gap-4 text-sm text-[#1B1D1E]/50">
          <div class="flex items-center gap-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#1A6B4A]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            DSGVO-konform
          </div>
          <div class="flex items-center gap-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#1A6B4A]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            ISO 27001
          </div>
          <div class="flex items-center gap-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#1A6B4A]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            1.000+ Unternehmen
          </div>
        </div>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 pt-2">
          <a href={`${base}demo/`} class="btn-primary">
            Kostenlose Demo vereinbaren
          </a>
          <a href={`${base}preise/`} class="btn-ghost">
            Preise ansehen
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Micro stats -->
        <div class="flex items-center gap-6 pt-2 border-t border-[#F0EDE8]">
          <div>
            <p class="text-2xl font-extrabold text-[#1B1D1E]">Ø 1.200 €</p>
            <p class="text-xs text-[#1B1D1E]/50">Netto-Vorteil / Mitarbeiter / Jahr</p>
          </div>
          <div class="w-px h-10 bg-[#F0EDE8]"></div>
          <div>
            <p class="text-2xl font-extrabold text-[#1B1D1E]">20 Min.</p>
            <p class="text-xs text-[#1B1D1E]/50">Durchschnittliche Setup-Zeit</p>
          </div>
          <div class="w-px h-10 bg-[#F0EDE8]"></div>
          <div>
            <p class="text-2xl font-extrabold text-[#1B1D1E]">40+</p>
            <p class="text-xs text-[#1B1D1E]/50">Lohnbuchhaltungs-Integrationen</p>
          </div>
        </div>
      </div>

      <!-- ── Right: HTML/CSS UI Mockups ── -->
      <div class="relative hidden lg:flex items-start justify-center" style="min-height: 460px;">

        <!-- Glow behind dashboard -->
        <div class="absolute inset-0 pointer-events-none" style="background: radial-gradient(ellipse 70% 60% at 55% 45%, rgba(26,107,74,0.12) 0%, transparent 70%);"></div>

        <!-- Desktop dashboard — main card -->
        <div class="relative z-10 w-full" style="max-width: 560px; transform: perspective(1200px) rotateY(-4deg) rotateX(2deg); transform-origin: center center;">
          <DashboardMockup />
        </div>

        <!-- Mobile app — floating card bottom-left -->
        <div class="absolute z-20" style="bottom: -20px; left: -10px; transform: perspective(800px) rotateY(6deg) rotateX(-2deg);">
          <MobileAppMockup />
        </div>

        <!-- Floating rating badge — top right -->
        <div class="absolute z-30 top-0 right-0 bg-[#F5A623] text-[#1B1D1E] rounded-2xl px-4 py-3 shadow-xl" style="transform: translateY(-8px) rotate(2deg);">
          <p class="text-2xl font-extrabold leading-none">4,9 ★</p>
          <p class="text-xs font-semibold mt-0.5">Kundenbewertung</p>
        </div>

        <!-- Floating "Live" indicator -->
        <div class="absolute z-30 flex items-center gap-2 bg-white rounded-xl px-3 py-2 shadow-lg border border-[#F0EDE8]" style="top: 60px; right: -10px;">
          <span class="w-2 h-2 rounded-full bg-[#1A6B4A] animate-pulse"></span>
          <span class="text-xs font-semibold text-[#1B1D1E]">91% Aktivierungsrate</span>
        </div>

      </div>

      <!-- Mobile-only: stacked mockup (simplified) -->
      <div class="lg:hidden relative overflow-hidden rounded-2xl border border-[#F0EDE8] shadow-xl" style="max-height:300px;">
        <div class="overflow-hidden" style="transform: scale(0.75); transform-origin: top center; height: 400px;">
          <DashboardMockup />
        </div>
      </div>

    </div>
  </div>
</section>
