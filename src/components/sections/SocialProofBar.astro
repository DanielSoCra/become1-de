---
const companies = [
  { name: 'Trade Republic', industry: 'FinTech' },
  { name: 'Hypoport', industry: 'PropTech' },
  { name: 'Stadler', industry: 'Maschinenbau' },
  { name: 'VHP', industry: 'Beratung' },
  { name: 'Optik Hallmann', industry: 'Retail' },
  { name: 'Proks', industry: 'IT-Services' },
  { name: 'Klein & Partner', industry: 'Steuerberatung' },
  { name: 'TechSolutions', industry: 'Software' },
];
---

<section class="bg-white border-y border-[#F0EDE8] py-10 overflow-hidden">
  <p class="text-center text-xs font-semibold text-[#1B1D1E]/40 mb-8 uppercase tracking-widest px-6">
    Ãœber 1.000 Unternehmen in Deutschland vertrauen auf become.1
  </p>

  <!-- Marquee container -->
  <div class="relative">
    <!-- Fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-24 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-24 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>

    <div class="flex gap-12 marquee-track">
      {[...companies, ...companies].map((company) => (
        <div class="flex items-center gap-2 shrink-0">
          <div class="w-8 h-8 rounded-lg bg-[#F0EDE8] flex items-center justify-center shrink-0">
            <span class="text-xs font-extrabold text-[#1A6B4A]">{company.name.charAt(0)}</span>
          </div>
          <div>
            <span class="text-sm font-bold text-[#1B1D1E] whitespace-nowrap">{company.name}</span>
            <span class="text-xs text-[#1B1D1E]/40 ml-1.5 hidden sm:inline">{company.industry}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .marquee-track {
    animation: marquee 30s linear infinite;
    width: max-content;
  }

  .marquee-track:hover {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @media (prefers-reduced-motion: reduce) {
    .marquee-track {
      animation: none;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
