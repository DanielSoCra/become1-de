---
const navLinks = [
  {
    label: 'Lösungen',
    href: '/loesungen/',
    children: [
      { label: 'Gehaltszusätze', href: '/loesungen/gehaltszusaetze/' },
      { label: 'Gehaltsumwandlung', href: '/loesungen/gehaltsumwandlung/' },
    ],
  },
  {
    label: 'Benefits',
    href: '/benefits/',
    children: [
      { label: 'Sachbezug', href: '/benefits/sachbezug/' },
      { label: 'Essenszuschuss', href: '/benefits/essenszuschuss/' },
      { label: 'Mobilitätsbudget', href: '/benefits/mobilitaetsbudget/' },
      { label: 'Alle Benefits', href: '/benefits/' },
    ],
  },
  { label: 'Preise', href: '/preise/' },
  { label: 'Warum become.1?', href: '/warum-wir/' },
  {
    label: 'Ressourcen',
    href: '/ressourcen/',
    children: [
      { label: 'Blog', href: '/blog/' },
      { label: 'FAQ', href: '/ressourcen/faq/' },
      { label: 'Datensicherheit', href: '/ressourcen/datensicherheit/' },
    ],
  },
];
---

<header class="bg-[#FAF9F7] sticky top-0 z-50 border-b border-[#F0EDE8]">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center max-w-7xl">
    <!-- Logo -->
    <a href="/" class="text-2xl font-extrabold text-[#1B1D1E] tracking-tight">
      become<span class="text-[#F5A623]">.</span>1
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center space-x-8">
      {navLinks.map((link) => (
        <div class="relative group">
          <a
            href={link.href}
            class="text-[#1B1D1E] hover:text-[#1A6B4A] font-medium text-sm transition-colors duration-200 flex items-center gap-1"
          >
            {link.label}
            {link.children && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            )}
          </a>
          {link.children && (
            <div class="absolute top-full left-0 mt-2 w-52 bg-white rounded-xl shadow-lg border border-[#F0EDE8] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              {link.children.map((child) => (
                <a
                  href={child.href}
                  class="block px-4 py-3 text-sm text-[#1B1D1E] hover:bg-[#F0EDE8] hover:text-[#1A6B4A] first:rounded-t-xl last:rounded-b-xl transition-colors duration-150"
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </nav>

    <!-- CTA Buttons -->
    <div class="hidden lg:flex items-center space-x-4">
      <a href="https://app.become1.de" class="text-sm font-medium text-[#1B1D1E] hover:text-[#1A6B4A] transition-colors">Login</a>
      <a href="/demo/" class="btn-primary text-sm py-3 px-6">Kostenlose Demo</a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      class="lg:hidden p-2 rounded-lg hover:bg-[#F0EDE8] transition-colors"
      aria-label="Menü öffnen"
      aria-expanded="false"
    >
      <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-[#FAF9F7] border-t border-[#F0EDE8]">
    <div class="container mx-auto px-6 py-4 space-y-1 max-w-7xl">
      {navLinks.map((link) => (
        <div>
          <a
            href={link.href}
            class="block py-3 text-base font-medium text-[#1B1D1E] hover:text-[#1A6B4A] border-b border-[#F0EDE8] transition-colors"
          >
            {link.label}
          </a>
          {link.children && (
            <div class="pl-4 space-y-1 mt-1">
              {link.children.map((child) => (
                <a
                  href={child.href}
                  class="block py-2 text-sm text-[#1B1D1E]/70 hover:text-[#1A6B4A] transition-colors"
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <div class="pt-4 space-y-3">
        <a href="/demo/" class="btn-primary w-full text-center block">Kostenlose Demo vereinbaren</a>
        <a href="https://app.become1.de" class="btn-secondary w-full text-center block">Login</a>
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  btn?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden', !isOpen);
    closeIcon?.classList.toggle('hidden', isOpen);
    btn.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
